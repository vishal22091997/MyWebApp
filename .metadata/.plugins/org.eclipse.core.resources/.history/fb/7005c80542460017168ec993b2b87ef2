package sethi.vishal.MyWebApp.classes;

import org.hibernate.Session;
import org.hibernate.cfg.Configuration;

import sethi.vishal.MyWebApp.entity.Cart;
import sethi.vishal.MyWebApp.entity.User;

public class AddingToCart {
	private String prodId;
	private int count;
	private User user;
	public AddingToCart(String prodId, int count, User user) {
		super();
		this.prodId = prodId;
		this.count = count;
		this.user = user;
	}
	
	public void addToCart(){
		Session session = new Configuration().configure().addAnnotatedClass(Cart.class).buildSessionFactory().getCurrentSession();
		session.beginTransaction();
		int userId = user.getId();
		List<Cart> list = session.createQuery("from Cart where cust_id="+userId+" and product_id='"+prodId+"'");
		Cart cart = new Cart(count,  prodId,user.getId());
		session.save(cart);
		session.getTransaction().commit();
		session.close();
	}

}
