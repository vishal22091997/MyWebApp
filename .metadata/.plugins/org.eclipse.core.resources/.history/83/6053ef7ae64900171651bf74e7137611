import java.util.Scanner;

public class NEO01 {
	public static void main(String hdk[]){
		Scanner scan = new Scanner(System.in);
		int t = scan.nextInt();
		while(t-->0){
			int n = scan.nextInt();
			long hap = 0;
			
			long pos = 0;
			long posSum = 0;
			long negSum = 0;
			while(n-->0){
				int cur = scan.nextInt();
				if(cur>0){
					pos++;
					posSum+=cur;
				}else{
					negSum+=cur;
				}
			}
			long ans = pos*(long)posSum+negSum;
			System.out.println(ans);
		}
	}

}
