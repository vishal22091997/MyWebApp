import java.util.Arrays;
import java.util.Scanner;

public class NEO01 {
	public static void main(String hdk[]){
		Scanner scan = new Scanner(System.in);
		int t = scan.nextInt();
		while(t-->0){
			int n = scan.nextInt();
			int a[] = new int[n];
			long posSum = 0;
			long negSum = 0;
			int index = -1;
			
			for(int i=0;i<n;i++){
				a[i] = scan.nextInt();
				if(a[i]>=0){
					posSum+=a[i];
				}else{	 
					negSum+=a[i];
				}
			}
			Arrays.sort(a);
			int negInd = -1;
			 
			
			long curSum = a[n-1];
			long curAns = a[n-1];
			int posCount = 1;
			int i;
			for(i=n-2;i>=0;i--){ 
				int ind = n-i;
				long tempCheck = ind*(a[i]+curSum);
				if(tempCheck>curAns){
					curAns = tempCheck;
				}
				else{
					break;
				}
				
			}
			i++;
			for(;i>=0;i--){
				curAns+=a[i];
			}
		}
	}

}
