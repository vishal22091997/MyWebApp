import java.util.Arrays;
import java.util.Scanner;
 
 class Triplets {
	public static void main(String djd[]){
		Scanner scan = new Scanner(System.in);
		int t = scan.nextInt();
		while(t-->0){
			int p = scan.nextInt(), q = scan.nextInt(), r = scan.nextInt();
			int a[] = new int[p];
			int b[] = new int[q];
			int c[] = new int[r];
			for(int i=0;i<p;i++){
				a[i] = scan.nextInt();
			}
			Arrays.sort(a);
			for(int j=0;j<q;j++){
				b[j] = scan.nextInt();
			}
			Arrays.sort(b);
			for(int k=0;k<r;k++){
				c[k] = scan.nextInt();
			}
			Arrays.sort(c);;
			int startY = 0;
			while(startY<q&&b[startY]<a[0]&&b[startY]<b[0]){
				startY++;
			}
			long ans = 0;
			for(int i=0;i<p;i++){
				int x = a[i];
				for(int j=q-1;j>=startY;j--){
					int y = b[j];
					if(x<=y){
						int xsum = x+y;
						for(int k=0;k<r;k++){
							int z = c[k];
							if(y>=z){
								ans += (long)xsum*(long)(y+z);
								
								ans = ans%1000000007;
							}else{
								break;
							}
						}
					}else{
						break;
					}
				}
			}
			System.out.println(ans);
		}
	}
 
} 