package sethi.vishal.servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import sethi.vishal.classes.CheckUserWithPassword;
import sethi.vishal.entity.UsersData;



public class ControlLogIn extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String email = request.getParameter("email_entered");
		String password = request.getParameter("password_entered");
		CheckUserWithPassword check = new CheckUserWithPassword(email, password);
		
		if(check.checkUser()){
			HttpSession session = request.getSession();
			System.out.println("Session Created");
			UsersData user = check.getUser();
			session.setAttribute("userDetails",user );
			RequestDispatcher dispatcher = request.getRequestDispatcher("/Home.aspx");
			System.out.println("Forwarder");
			dispatcher.forward(request, response);
		}else{
			
		}
		
		
		
		
	}

}
