package sethi.vishal.testing;

import java.util.List;

import org.hibernate.Session;
import org.hibernate.cfg.Configuration;

import sethi.vishal.MyWebApp.entity.Colors;

public class testHibernateQuery {
	public static void main(String hd[]){
		Session session = new Configuration().configure().addAnnotatedClass(Colors.class).buildSessionFactory().getCurrentSession();
		session.beginTransaction();
		List<String> list = session.createQuery("from Colors col where no = 1").list();
		System.out.println(list);
	}

}
